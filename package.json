{
  "name": "azure",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc -w",
    "prestart": "npm run build",
    "start": "func start",
    "lint": "eslint '{src}/**/*.ts'",
    "types": "dtsgen --out src/types.d.ts src/api.json",
    "interfaces": "npx swagger-typescript-api -p ./src/api.json -o ./src -n interfaces.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "dependencies": {
    "@azure/functions": "^1.2.0",
    "openapi-request-validator": "^7.0.2",
    "openapi-response-validator": "^7.0.1"
  },
  "devDependencies": {
    "@azure/functions": "^1.2.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.3.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "typescript": "^3.3.3"
  }
}

{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Tenant users",
    "description": "Tenant users api",
    "termsOfService": "http://swagger.io/terms/",
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:7071/v1"
    }
  ],
  "paths": {
    "/tenants/users": {
      "post": {
        "description": "get tenant user",
        "operationId": "getTenantUsers",
        "requestBody": {
          "description": "Get tenant users",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TenantUserRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "tenant user response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TenantUser"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TenantUserRequest": {
        "required": ["limit", "searchText"],
        "properties": {
          "limit": {
            "type": "integer",
            "format": "int32",
            "minimum": 1,
            "maximum": 20
          },
          "searchText": {
            "type": "string"
          }
        }
      },
      "TenantUser": {
        "required": ["id", "name"],
        "properties": {
          "id": {
            "readOnly": true,
            "type": "number"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Error": {
        "required": ["code", "message"],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          },
          "errorCode": {
            "type": "string"
          },
          "location": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "required": ["status", "errors"],
        "properties": {
          "status": {
            "type": "string",
            "maxLength": 255,
            "description": "Status code",
            "example": "500"
          },
          "message": {
            "type": "string",
            "maxLength": 1024,
            "description": "Message description",
            "example": "An error occured"
          },
          "errors": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  }
}
